<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.paul.vpdemo.MainActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp">

            <com.cokus.wavelibrary.view.WaveSurfaceView
                    android:id="@+id/wavesurfaceviewOne"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:layout_marginTop="3dp" />

            <com.cokus.wavelibrary.view.WaveSurfaceView
                    android:id="@+id/wavesurfaceviewTwo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:layout_marginTop="3dp" />

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:layout_marginTop="3dp">

                <Button
                        android:id="@+id/regVoicePrintOne"
                        android:text="@string/regVoicePrintOne"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="3dp"/>
                <Button
                        android:id="@+id/regVoicePrintTwo"
                        android:text="@string/regVoicePrintTwo"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/regVoicePrintOne"
                        android:layout_marginTop="3dp"/>
                <Button
                        android:id="@+id/verVoicePrint"
                        android:text="@string/verVoicePrint"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/regVoicePrintTwo"
                        android:layout_marginTop="3dp"
                        android:enabled="false"/>
                <Button
                        android:id="@+id/textShower"
                        android:layout_alignTop="@id/regVoicePrintOne"
                        android:layout_alignBottom="@id/verVoicePrint"
                        android:layout_width="200dp"
                        android:layout_height="160dp"
                        android:layout_toRightOf="@id/regVoicePrintOne"
                        android:layout_marginLeft="3dp"
                        android:gravity="center"
                        android:text="@string/normalStatus"/>
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
